	<control type="button" id="1034">
	<include>DialogContext_Button</include>
	<onleft>Dialog.Close(106)</onleft>
	<onright>Dialog.Close(106)</onright>
	<onclick>RunScript(script.extendedinfo,info=openinfodialog)</onclick>
